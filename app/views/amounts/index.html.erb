<div class="container mt-5">
  <h1 class="mb-4">Submit Form</h1>

  <div class="row">
    <div class="col-md-6">
      <%= form_tag(api_v1_total_amount_increment_path(:json), remote: true, method: 'PUT', class: 'form') do %>
        <div class="form-group">
          <%= label_tag :value, "Value", class: 'form-label' %>
          <%= number_field_tag :value, "", class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= label_tag :idempotency_key, "Idempotency Key", class: 'form-label' %>
          <%= text_field_tag :idempotency_key, SecureRandom.uuid, class: 'form-control' %>
        </div>

        <br>
  
        
        <div class="form-group">
          <%= submit_tag "Submit", class: 'btn btn-primary form-control' %>
        </div>
        
      <% end %>
    </div>
    
    <div class="col-md-6" style="background-color: #eee; border-radius: 5px; padding: 20px;">
      <div id="response" class="mt-3"></div>
    </div>
  </div>
</div>
